{
    "name": "snowfall-script",
    "displayName": "Snowfall Script Language Support",
    "description": "Syntax highlighting for Snowfall script language",
    "version": "1.0.0",

    "engines": {
        "vscode": "^1.39.0"
    },

    "categories": [
        "Programming Languages",
        "Themes"
    ],

    "contributes": {
        "languages": [
            {
                "id": "snowfall",
                "aliases": ["Snowfall Script", "SF"],
                "extensions": [".sf"],
                "configuration": "./language-configuration.json"
            }
        ],

        "grammars": [
            {
                "language": "snowfall",
                "scopeName": "source.sf",
                "path": "./syntaxes/sf.tmLanguage.json"
            }
        ],

        "themes": [
            {
                "label": "Snowfall Script Theme",
                "uiTheme": "vs-dark",
                "path": "./themes/snowfall-theme.json"
            }
        ]
    }
}
