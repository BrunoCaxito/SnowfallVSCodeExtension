{
    "name": "snowfall-language",
    "publisher": "BrunoCaxito",
    "displayName": "Snowfall Storytelling Language Support",
    "description": "Syntax highlighting for Snowfall Storytelling Language",
    "version": "1.2.0",
    "license": "MIT",
    "homepage": "https://github.com/BrunoCaxito/SnowfallVSCodeExtension",
    "icon": "icon.png",

    "author": {
        "email": "brunocaxito@yahoo.com",
        "name": "Bruno Caxito",
        "url": "https://github.com/BrunoCaxito"
    },

    "engines": {
        "vscode": "^1.39.0"
    },

    "repository": {
        "type": "git",
        "url": "https://github.com/BrunoCaxito/SnowfallVSCodeExtension"
    },

    "galleryBanner": {
        "color": "#e1bee7"
    },

    "categories": [
        "Programming Languages"
    ],

    "contributes": {
        "languages": [
            {
                "id": "snowfall",
                "aliases": ["Snowfall Script", "SF"],
                "extensions": [".sf"],
                "configuration": "./language-configuration.json"
            }
        ],

        "grammars": [
            {
                "language": "snowfall",
                "scopeName": "source.sf",
                "path": "./syntaxes/sf.tmLanguage.json"
            }
        ]
    }
}
