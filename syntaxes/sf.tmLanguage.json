{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Snowfall Script",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#label"
		},
		{
			"include": "#dialog"
		},
		{
			"include": "#option"
		},
		{
			"include": "#command"
		},
		{
			"include": "#goto"
		}
	],
	"repository": {
		"comment": {
			"patterns": [
				{
					"name": "strong.comment.title.sf",
					"match": "(SCENE)[ -Z]+"
				},
				{
					"name": "markup.underline.comment.header.sf",
					"match": "[0-9A-Z\\ \\.\\-\\'\\,]{12,}"
				},
				{
					"name": "markup.italic.comment.line.sf",
					"match": "^((?!(^@\\ |^-\\ |^\\*\\ |^\\$\\ |^->\\ |^\\t)).)*$"
				}
			]
		},
		"label": {
			"patterns": [
				{
					"name": "entity.name.type.label.sf",
					"match": "^(@\\ )(.*$)"
				}
			]
		},
		"dialog": {
			"patterns": [
				{
					"name": "markup.heading.dialog.metadata.sf",
					"match": "^(-\\ )(.*$)"
				},
				{
					"name": "variable.dialog.data.sf",
					"match": "^(\\t)(.*$)"
				}
			]
		},
		"option": {
			"patterns": [
				{
					"name": "invalid.option.sf",
					"match": "^(\\*\\ )(.*$)"
				}
			]
		},
		"command": {
			"patterns": [
				{
					"name": "comment.command.sf",
					"match": "^(\\$\\ )(.*$)"
				}
			]
		},
		"goto": {
			"patterns": [
				{
					"name": "keyword.control.goto.sf",
					"match": "^(->\\ )(.*$)"
				}
			]
		}
	},
	"scopeName": "source.sf"
}
